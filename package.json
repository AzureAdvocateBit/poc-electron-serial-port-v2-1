{
  "name": "poc-electron-serial-port-v2",
  "description": "Desenvolvimento de uma poc que usa o Electron com a biblioteca serial port",
  "version": "0.1.0",
  "author": "Glaucia Lemos",
  "license": "MIT",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev-server": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --quiet --port 3000",
    "dev": "cross-env NODE_ENV=development electron ./",
    "build": "cross-env NODE_ENV=production webpack --mode production --progress --profile --colors",
    "start": "cross-env NODE_ENV=production electron ./",
    "package": "npm run build; npm run package-osx; npm run package-win; npm run package-linux;",
    "package-osx": "electron-packager ./ --platform=darwin --arch=x64 --icon=assets/app.icns --out=package --asar --overwrite=force",
    "package-win": "electron-packager ./ --platform=win32 --arch=ia32 --icon=assets/app.ico --out=package --asar --overwrite=force",
    "package-linux": "electron-packager ./ --platform=linux --arch=ia32 --icon=assets/app.ico --out=package --asar --overwrite=force"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glaucia86/poc-electron-serial-port-v2.git"
  },
  "keywords": [
    "electron",
    "nodeJs",
    "serialPort",
    "tutorial",
    "poc",
    "demo",
    "vuejs",
    "electron-installer",
    "installer",
    "serialport",
    "node-usb"
  ],
  "bugs": {
    "url": "https://github.com/glaucia86/poc-electron-serial-port-v2/issues"
  },
  "homepage": "https://github.com/glaucia86/poc-electron-serial-port-v2#readme",
  "dependencies": {
    "electron": "^1.8.2",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "jquery": "^3.3.1",
    "serialport": "^7.0.2",
    "usb": "^1.3.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.10",
    "electron-packager": "^12.2.0",
    "electron-reload": "^1.2.2",
    "electron-builder": "^20.28.4",
    "electron-installer-debian": "^1.0.0",
    "electron-installer-dmg": "^2.0.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "file-loader": "^1.1.9",
    "vue-loader": "^14.1.1",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9",
    "webpack-dev-server": "^3.1.0"
  }
}
