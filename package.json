{
  "name": "poc-electron-serial-port-v2",
  "description": "Desenvolvimento de uma poc que usa o Electron com a biblioteca usb",
  "version": "0.1.0",
  "author": "Glaucia Lemos",
  "license": "MIT",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev-server": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --quiet --port 3000",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "dev": "cross-env NODE_ENV=development electron ./",
    "build": "cross-env NODE_ENV=development webpack --mode production --progress --profile --colors",
    "start": "cross-env NODE_ENV=production electron ./",
    "exec": "yarn run build && yarn start",
    "package": "yarn run build; yarn run package-osx; yarn run package-win; yarn run package-linux;",
    "package-osx": "electron-packager ./ --platform=darwin --arch=x64 --icon=src/assets/icons/mac/zoox-icon.icns --out=package --asar --overwrite=force",
    "package-win": "electron-packager ./ --platform=win32 --arch=ia32 --icon=src/assets/icons/win/zoox-icon.ico --prune=true --out=package --asar --overwrite=force",
    "package-linux": "electron-packager ./ --platform=linux --arch=x64 --icon=src/assets/icons/png/zoox-icon.png --prune=true --out=package --asar --overwrite=force",
    "create-debian-installer": "electron-installer-debian --src package/poc-electron-serial-port-v2-linux-x64/ --arch amd64 --config debian.json"
  },
  "build": {
    "appId": "poc.electron.serialportapp",
    "productName": "Porta USB App"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glaucia86/poc-electron-serial-port-v2.git"
  },
  "keywords": [
    "electron",
    "nodeJs",
    "serialPort",
    "tutorial",
    "poc",
    "demo",
    "vuejs",
    "electron-installer",
    "installer",
    "serialport",
    "node-usb"
  ],
  "bugs": {
    "url": "https://github.com/glaucia86/poc-electron-serial-port-v2/issues"
  },
  "homepage": "https://github.com/glaucia86/poc-electron-serial-port-v2#readme",
  "dependencies": {
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^4.0.6",
    "jquery": "^3.3.1",
    "serialport": "^7.0.2",
    "usb": "^1.5.0",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "webcamjs": "^1.0.25"
  },
  "devDependencies": {
    "@vue/eslint-config-prettier": "^4.0.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.10",
    "electron": "^1.8.2",
    "electron-builder": "^20.28.4",
    "electron-installer-debian": "^1.0.0",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^12.2.0",
    "electron-reload": "^1.2.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "file-loader": "^1.1.9",
    "vue-loader": "^14.1.1",
    "vue-template-compiler": "^2.5.17",
    "webpack": "4.19.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.0",
    "webpack-merge": "^4.1.2"
  }
}
